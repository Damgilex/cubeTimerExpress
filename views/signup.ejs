<%- include ('partials/_header') %>

<h1 style="text-align: center;">Sign up</h1>
<p  style="text-align: center; font-size: 1.5rem;">Fill the next fields to create an account</p>
    <div  class="container">
        <div class="row" style="margin:5rem auto">
            <form action="/signup" method="POST" style="margin:0 auto; box-shadow: 0px 3px 14px 3px rgba(0,0,0,0.28); padding:2rem; border-radius: 5px;" >
                
                <div class="form-group">
                    <label for="txtname">Name</label>
                    <input id="txtname" class="form-control" type="text" name="name">
                </div>

                <div class="form-group">
                    <label for="txtemail">Email</label>
                    <input id="txtemail" class="form-control" type="email" name="email">
                </div>

                <div class="form-group">
                    <label for="txtpassword">Password</label>
                    <input id="txtpassword" class="form-control" type="password" name="password">
                </div>

                <!-- <div class="form-group">
                    <label for="txtpasswordRepeat">Contrase√±a</label>
                    <input id="txtpasswordRepeat" class="form-control" type="password" name="passwordRepeat">
                </div> -->

                <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;"> Join</button>

            </form>
        </div>
    </div>


<%- include ('partials/_footer') %>